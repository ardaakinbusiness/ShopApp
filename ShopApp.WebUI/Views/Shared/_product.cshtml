
@model Product

<div class="col-md-4 mt-2">
    <div class="card h-100">
        <img src="~/img/@Model.Images[0].ImageUrl" class="card-img-top" alt="...">
        <div class="card-body">
            <h4 class="card-title">@Model.Name</h4>
            <small class="text-muted">
               @Model.Price <i class="fa-solid fa-turkish-lira-sign"></i>
            </small>            
        </div>
        <div class="card-footer text-center">
           <a asp-controller="Shop" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm float-start">Details</a>
            @if (User.Identity.IsAuthenticated)
            {
                <form asp-controller="Cart" asp-action="AddToCart" method="post">
                    <input type="hidden" name="productId" value="@Model.Id"/>
                    <input type="hidden" name="quantity" value="1" />
                    <button type="submit" class="btn btn-outline-primary btn-sm float-end">Add To Cart</button>
                </form>
            }
           
        </div>
    </div>
</div>